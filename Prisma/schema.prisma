datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  category    String   // Bedsheets, Curtains, etc.
  mainImage   String
  stock       Int      @default(0)
}